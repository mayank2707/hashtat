%h1 Add a Tattoo To Your Portfolio

= simple_form_for([@artist, @tattoo]) do |f|
  = f.error_notification

  .field
    = f.input :picture, :as => :file
  .field
    = f.input :description
  .field
    = f.input :body_location,
    :collection => [['shoulder',:shoulder], ['arm',:arm], ['upper back',:upper_back], ['torso',:torso], ['lower back',:lower_back], ['face',:face], ['neck',:neck], ['calf',:calf], ['leg',:leg], ['other', :other]]
  .field
    = f.input :studio
    = f.hidden_field :artist_id, :value => params[:artist_id]
  .form_action
    = f.button :submit, "Add To My Portfolio"



